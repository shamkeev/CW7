<p id="notice"><%= notice %></p>

<div class="well">
  <h2>
    <strong>Question:</strong>
    <%= @question.question %>
  </h2>
</div>


<%= link_to 'Edit', edit_test_question_path(@test, @question), class:'btn btn-warning btn-sm' %> |
<%= link_to 'Back', test_path(@test), class:'btn btn-default btn-sm' %> |
<%= link_to 'New Answer', new_test_question_answer_path(@test, @question), class:'btn btn-primary btn-sm'%>

<hr>

<div class="panel panel-default">
  <div class="panel-heading">
    Answers for this question:
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th>Answer</th>
        <th>Is Correct</th>
        <th colspan="2">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% count = 0 %>
      <% @answers.each do |answer|%>
          <tr>
             <td><%= count += 1%></td>
            <td><%= answer.answer %></td>
            <td><%= answer.correct %></td>
            <td><%= link_to 'Edit', edit_test_question_answer_path(@test, @question, answer), class:'btn btn-sm btn-warning'%></td>
            <td><%= link_to 'Delete', test_question_answer_path(@test, @question, answer), method: :delete, data:{confirm:'Are you sure?'},class:'btn btn-sm btn-danger'%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>