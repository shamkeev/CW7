<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>
<%= link_to 'New Test', new_test_path, class:'btn btn-default' %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Questions count</th>
      <th>Results count</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, test %></td>
        <td><a href="">Copy link</a></td>
        <td><%= link_to test.questions.count, test %></td>
        <td>25</td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

